@import url(http://fonts.googleapis.com/css\?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800);

html, body    
  font-family: 'Open Sans', sans-serif
  background-repeat: repeat  
  font-size: 100%
  padding:0px
  margin:0px
  background:#FAFAFA
  height: 100%
  color:#444 !important

brad()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

  -moz-transform: scale(arguments);
  -webkit-transform: scale(arguments);
  -o-transform: scale(arguments);
.profit-add
  background:#fafafa

.view
  padding: 0px
  overflow:hidden

.home-item
  width:100%
  display:inline-block
  position:relative
  font-weight:500

.item-name
  float:left
  position:relative
  display:inline-block
  font-family: 'Arvo', serif

.item-amount
  float:right
  position:relative
  display:inline-block

.tag-item
  width:100%
  display:inline-block
  position:relative
  font-weight:100

.left-indicator
  brad(30px)
  display:inline-block
  float:left
  height:10px
  width:10px
  margin:6px 5px 0px 30px
  position:relative

